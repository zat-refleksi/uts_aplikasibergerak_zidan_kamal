<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:requiresFadingEdge="horizontal"
    app:layout_anchorGravity="bottom|end">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nyanya"
        tools:context=".Activity_Home">

        <TextView
            android:id="@+id/container_frame1"
            android:layout_width="309dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineHeight="18.77dp"
            android:text="Belajar Desain Logo\n\nSederhana"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/container_frame2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/container_frame2"
            android:layout_width="291dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="18.77dp"
            android:text="TUTORIAL DASAR"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/container_frame1"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="330dp"
            android:layout_height="1141dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_frame1"
            app:srcCompat="@drawable/drawable_shape_5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="293dp"
            android:layout_height="1037dp"
            android:layout_gravity="top"
            android:layout_marginTop="120dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="22dp"
            android:text="Langkah 4: Memilih Warna\n\n\n\n\n\n\n\n\n\n\nSetelah bentuk logo selesai, sekarang saatnya memilih warna yang cocok. Gunakan Fill dan Stroke pada panel warna untuk menerapkan warna pada elemen-elemen logo. Pilih warna yang mendukung identitas brand atau konsep yang ingin kamu tampilkan.\n\nLangkah 5: Menambahkan Tipografi\n\n\n\n\n\n\n\n\nTambahkan teks di bawah logo menggunakan Type Tool (tekan T). Pilih font yang sesuai dengan konsep logo\n\nLangkah 6: Finishing dan Ekspor\n\n\n\n\n\n\n\nSetelah semua elemen selesai, lakukan pengecekan untuk memastikan tidak ada detail yang terlewat. Jika sudah siap, ekspor logo dengan memilih File &gt; Export &gt; Export As dan simpan dalam format yang sesuai, seperti PNG atau SVG.\n"
            android:textColor="#FFFFFFFF"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/container_frame1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="166dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF9800"
            android:text="Back"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.414"
            app:rippleColor="#80849D" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="274dp"
            android:layout_height="173dp"
            android:layout_marginTop="156dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/container_frame1"
            app:layout_constraintVertical_bias="0.001"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="151dp"
            android:layout_height="146dp"
            android:layout_marginTop="576dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/container_frame1"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/lolololo" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="235dp"
            android:layout_height="105dp"
            android:layout_marginTop="828dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:srcCompat="@drawable/logo2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="152dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="ShortCut"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.411" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <!-- Bilah Navigasi Tetap -->
    <LinearLayout
        android:id="@+id/container_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:persistentDrawingCache="scrolling|animation">

        <!-- Tombol Home -->
        <ImageButton
            android:id="@+id/button_home"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#373539"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/image_home" />

        <!-- Tombol Info -->
        <ImageButton
            android:id="@+id/button_info"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#373539"
            android:contentDescription="Info"
            android:scaleType="fitCenter"
            android:src="@drawable/image_info" />

        <!-- Tombol Search -->
        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#373539"
            android:contentDescription="Search"
            android:scaleType="fitCenter"
            android:src="@drawable/image_keyboard" />

        <!-- Tombol Profile -->
        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Profile"
            android:scaleType="fitCenter"
            android:src="@drawable/image_book" />

    </LinearLayout>

</RelativeLayout>
